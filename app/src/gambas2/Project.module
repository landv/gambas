END

PUBLIC SUB MakeDir(sDir AS String) AS Boolean
  
  DIM sPath AS String
  DIM sElt AS String
  
  FOR EACH sElt IN Split(sDir, "/")
    sPath &/= sElt
    TRY MKDIR "/" & sPath
  NEXT
  
  IF NOT Exist(sDir) OR IF NOT IsDir(sDir) THEN RETURN TRUE
  
END

PRIVATE SUB MakeLink(sSrc AS String, sDst AS String)
  
