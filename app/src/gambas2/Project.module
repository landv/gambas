  DIM sKey AS String
  
  $aRefreshAfter.Clear
  
  FOR EACH sClass IN GetClassesOnly()
    sKey = Project.Dir &/ sClass & ".class"
    TRY ProjectTree[sKey].Delete
    $aRefreshAfter.Add(sKey)
  NEXT
  
  DoRefreshAfter
  
