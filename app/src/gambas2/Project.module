PRIVATE SUB CopyProject(sSrc AS String, sDst AS String)
  
  DIM sFile AS String
  
  TRY MKDIR sDst
  
  FOR EACH sFile IN Dir(sSrc) 
    IF sFile = ".svn" OR sFile = "CVS" OR sFile = ".lock" THEN CONTINUE
    IF IsDir(sSrc &/ sFile) THEN
      CopyProject(sSrc &/ sFile, sDst &/ sFile)
