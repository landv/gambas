PUBLIC SUB dwgExample_Draw()
  
  DIM hDrawingArea AS DrawingArea = LAST
  
  WITH hDrawingArea
    Draw.Font = .Font
    Draw.Foreground = .Foreground
    Draw.Line(0, .H / 2 - 2, .W - 1, .H / 2 - 2)
    Draw.Transparent = FALSE
    Draw.Text(" " & .Tag & " ", 8, 0, .W - 8, .H)
  END WITH
  
END
