PRIVATE SUB RefreshCoord(X AS Integer, Y AS Integer)

  IF X <> $XD OR Y <> $YD THEN
    $XD = X
    $YD = Y
    'DrawTitle
    IF $XD <> COORD_HIDE AND $YD <> COORD_HIDE THEN
      lblCoord.Text = $XD & ":" & $YD
    ELSE 
      lblCoord.Text = ""
    ENDIF 
  ENDIF

END

