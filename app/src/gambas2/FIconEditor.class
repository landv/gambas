  ' IF hTool = $hTool THEN
  '   $hTool.Value = TRUE
  '   RETURN
  ' ENDIF


  IF hTool.Tag = "pipette" THEN $hLast = $hTool

  $bIgnoreClick = TRUE
  IF $hTool THEN $hTool.Value = FALSE
  $hTool = hTool
  $hTool.Value = TRUE 
  $bIgnoreClick = FALSE 

  $sTool = $hTool.Tag

  SELECT $sTool

    CASE "move"
      SetIcon(Mouse.SizeAll)

    CASE "pen"
      SetIcon(Mouse.Arrow)

    CASE ELSE
      SetIcon(Mouse.Cross)

  END SELECT
  
END


