Private Sub UpdateGlobalLayout()

  Dim bWelcome As Boolean
  Dim bFake As Boolean
  Dim hMenu As Menu
  Dim hCtrl As Control

  bWelcome = Not Project.Dir
  bFake = Project.IsFake()

  dwgWelcome.Visible = bWelcome

  mnuFile.Visible = bWelcome Or Not bFake
  mnuFile.Enabled = mnuFile.Visible
  mnuFileExtern.Visible = bFake
  mnuFileExtern.Enabled = mnuFileExtern.Visible
  
  mnuSave.Visible = Not bWelcome
  mnuSaveAs.Visible = Not bWelcome

  For Each hMenu In [mnuEdit, mnuProject, mnuDebug, mnuView]
    hMenu.Visible = Not bWelcome And Not bFake
    hMenu.Enabled = hMenu.Visible
  Next
  
  mnuTool.Visible = Not bWelcome
  For Each hMenu In [mnuBrowse, mnuTerminal, mnuSendMail, mnuUpdateAllForms]
    hMenu.Visible = Not bFake
    hMenu.Enabled = hMenu.Visible
  Next

  For Each hCtrl In [panDebug, panButton, panProject, tlbMain]
    hCtrl.Visible = Not bWelcome And Not bFake
