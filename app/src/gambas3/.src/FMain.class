Private Sub CompressAll(sPath As String, bUncompress As Boolean)
  
  Dim sFile As String
  Dim hTextEditor As FTextEditor
  
  If sPath = Project.KEY_MISC Then sPath = Project.Dir
  
  If Not IsDir(sPath) Then
    Try hTextEditor = Project.LoadFile(sPath)
    If hTextEditor Then 
      If bUncompress Then
        hTextEditor.Uncompress()
      Else
        If hTextEditor.Compress() Then
          If $sCompressMessage Then $sCompressMessage &= "<p>"
          $sCompressMessage &= "<tt>" & Mid$(sPath, Len(Project.Dir) + 2) & "</tt><p>" & FTextEditor.CompressMessage
        Endif
      Endif
    Endif
    Return
  Endif
  
  For Each sFile In Dir(sPath)
    If Left(sFile) = "." Then Continue
    If MCompressFile.CanCompress(sPath &/ sFile) Then CompressAll(sPath &/ sFile, bUncompress)
  Next
  
End

Public Sub OpenExternFile(Optional sPath As String)
  
  If Not sPath Then
    Dialog.Title = ("Select a file")
    Dialog.Key = "OpenExternFile"
    Dialog.Path = Settings["/OpenExternFile/Path"]
    If Dialog.OpenFile() Then Return
    sPath = Dialog.Path
    Settings["/OpenExternFile/Path"] = sPath
  Endif
  
  $bInOpenExtern = True
  
  If Not Project.Dir Then
    If Project.OpenFake() Then Goto CANNOT_OPEN
  Endif

  If Project.IsProjectPath(Dialog.Path) Then
    Message.Warning(("This file is located inside the project."))
    Goto CANNOT_OPEN
  Endif
  
  Application.Restart = ["gambas3", sPath]

  If Project.IsSqliteFile(sPath) Then
    sPath = MConnection.CreateSQLite(sPath)
  Endif              
  
  If Not Project.OpenFile(sPath) Then
    'If Project.IsFake() Then
      'Project.CloseProject
    'Endif
  Endif

  $bInOpenExtern = False
  OnProjectChange
  Return
  
CANNOT_OPEN:

  $bInOpenExtern = False
  
End

Public Sub OnRefreshComponents()
  
  Dim iPos As Integer
  Dim sComp As String
  Dim hMenu As Menu
  
  For Each hMenu In mnuGUI.Children
    If hMenu.Text Then hMenu.Checked = False
  Next
  
  hMenu = Null
  iPos = Project.Environment.Find("GB_GUI=*", gb.Like)
  If iPos >= 0 Then
    sComp = Scan(Project.Environment[iPos], "*=*")[1]
    For Each hMenu In mnuGUI.Children
      If hMenu.Tag = sComp Then
        btnGUI.Text = hMenu.Text
        hMenu.Checked = True
        Break
      Endif
      hMenu = Null
    Next
  Endif
  
  If Not hMenu Then
    btnGUI.Text = ("Current desktop")
    mnuSetGUICurrentDesktop.Checked = True
  Endif
  
End

Public Sub mnuSetGUI_Click()
  
  Dim sComp As String
  Dim iPos As Integer
  Dim aEnv As String[] = Project.Environment
  Dim sEnv As String
  
  sComp = Last.Tag
  iPos = aEnv.Find("GB_GUI=*", gb.Like)
  
  If Not sComp Then
    If iPos >= 0 Then 
      aEnv.Remove(iPos)
      Goto WRITE_PROJECT
    Endif
  Else
    sEnv = "GB_GUI=" & sComp
    If iPos < 0 Then
      aEnv.Add(sEnv, 0)
      Goto WRITE_PROJECT
    Else If aEnv[iPos] <> sEnv Then
      aEnv[iPos] = sEnv
      Goto WRITE_PROJECT
    Endif
  Endif
  
  Return
  
WRITE_PROJECT:

  Project.WriteProject(True)
  OnRefreshComponents
  
End

Public Sub wrkProject_Activate()

  Dim hForm As Object
  Dim hMenu As Menu
  
  hForm = wrkProject.ActiveWindow
  
  Project.Activate(hForm)
  
  If Project.IsFake() Then
    If wrkProject.Count = 0 Then Me.Close
  Endif
  
  If Not hForm Then
    mnuEdit.Enabled = False
  Else
    Try hMenu = hForm.GetPopupMenu()
    If Not hMenu Then
      mnuEdit.Enabled = False
    Else
      mnuEdit.Enabled = True
      mnuEdit.Proxy = hMenu
    Endif
  Endif
  
End

