Public Sub txtSearchProject_Activate()

  txtSearchProject.FilterNow

  tvwProject.MoveFirst
  tvwProject.MoveCurrent
  
  While tvwProject.Available
    If CanEdit(tvwProject.Item.Key) Then 
      tvwProject.Key = tvwProject.Item.Key
      Break
    Endif
    tvwProject.MoveBelow
  Wend
  
  tvwProject_Activate

End

Public Sub txtSearchProject_KeyPress()

  Dim H As Integer

  If Key.Text = "+" Then
    Try tvwProject.Current.Expanded = True
    Stop Event
    Return
  Else If Key.Text = "-"
    Try tvwProject.Current.Expanded = False
    Stop Event
    Return
  Endif

  Select Case Key.Code
    
    Case Key.Esc
      If txtSearch.Text Then txtSearchProject.Clear
      Return
    
    Case Key.Up
      tvwProject.MoveCurrent()
      tvwProject.MoveAbove()
      
    Case Key.PageUp
      tvwProject.MoveCurrent()
      H = tvwProject.ClientHeight
      While H > 0
        If tvwProject.MoveAbove() Then 
          tvwProject.MoveBack()
          Break
        Endif
        H -= tvwProject.Item.Height
      Wend
    
    Case Key.Down
      tvwProject.MoveCurrent()
      tvwProject.MoveBelow()
      
    Case Key.PageDown
      tvwProject.MoveCurrent()
      H = tvwProject.ClientHeight
      While H > 0
        If tvwProject.MoveBelow() Then 
          tvwProject.MoveBack()
          Break
        Endif
        H -= tvwProject.Item.Height
      Wend
    
    Case Key.Home
      If Key.Control Then GoSub GOTO_TOP
    
    Case Key.End, Key.PageDown
      If Key.Control Then GoSub GOTO_BOTTOM
      
    Case Else
      Return
      
  End Select

  Try tvwProject.Item.Selected = True
  Try tvwProject.Item.EnsureVisible()
  Return
   
GOTO_TOP:

  tvwProject.MoveFirst()
  Return
  
GOTO_BOTTOM:

  tvwProject.MoveFirst()
  tvwProject.MoveLast()
  Do
    If tvwProject.MoveBelow() Then
      tvwProject.MoveBack()
      Break
    Endif
    'tvwProject.MoveLast()
  Loop
  Return
   
End

