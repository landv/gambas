Public Sub wrkProject_Close((Window) As Window)

  Dim hForm As Object = Window
  Dim iResp As Integer

  If Project.IsFake() Then
    If hForm.IsModified() Then
      iResp = Message.Warning(("The file has been modified.\n\nAll your changes will be lost."), ("Save"), ("Ignore"), ("Cancel"))
      wrkProject.Lock
      Select Case iResp
        Case 1
          hForm.Save
          Project.UnloadFile(hForm.Path)
        Case 2
          Project.UnloadFile(hForm.Path)
        Case 3
      End Select
      wrkProject.Unlock
      Stop Event
    Endif
    
  Endif

  
End

