Private Sub GetKeyTitle(sKey As String) As String

  Dim sTitle As String
  
  While sKey
    If sTitle Then sTitle = " > " & sTitle
    sTitle = tvwProject[sKey].Text & sTitle
    sKey = tvwProject[sKey].ParentKey
  Wend
  
  Return sTitle
  
Catch
  
  Return sKey & "?"

End

Public Sub ShowMessage(sMsg As String, sIcon As String, Optional sKey As String)
  
  'Dim X, Y As Integer
  
  If NoMessage Then Return
  
  If sKey Then sMsg = "<b>" & GetKeyTitle(sKey) & "</b><p>" & sMsg
  
  sMsg = Replace(sMsg, "\n", "<br>")
    
  If FMain.Visible And If panProject.Visible And If Not panProject.Hidden Then
    
    msgError.Open(sMsg, Picture["icon:/32/" & sIcon])
    
  Else
    
    If sIcon = "error" Then
      Message.Error(sMsg)
    Else If sIcon = "warning" Then
      Message.Warning(sMsg)
    Else
      Message(sMsg)
    Endif
    
  Endif
  
End

