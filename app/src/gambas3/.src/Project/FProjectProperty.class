    Case Project.TYPE_LIBRARY
      ipnProject[COMPONENT_PROPERTIES_TAB].Visible = True
      'ipnProject[COMPONENT_PROPERTIES_TAB].Text = ("Library properties")
      lblInfo.Text = ("Information about library")
      panCompatible.Show
    
  End Select

End

