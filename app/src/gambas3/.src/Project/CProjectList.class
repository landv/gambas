End

Private Sub Current_Write(Value As ProjectBox)

  If $hCurrent = Value Then Return
  
  If $hCurrent Then $hCurrent.Selected = False
  $hCurrent = Value
  If $hCurrent Then $hCurrent.Selected = True

End
