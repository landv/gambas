Public Sub GetColor(Optional bIgnoreOpacity As Boolean) As Integer
  
  Dim iColor As Integer = cchColor.Value
  
  RememberColor(iColor)
  
  If Not bIgnoreOpacity Then iColor = Color.SetAlpha(iColor, 255 - slbOpacity.Value)
  Return iColor
  
End

