Private Sub RememberGradient(hBrush As CReportBrush)
  
  If $aGradient.Exist(hBrush) Then Return
  
  $aGradient.Add(hBrush.Copy(), 0)
  If $aGradient.Count > 24 Then $aGradient.Remove($aGradient.Max)
  dwgGradientStack.Refresh
  
End

