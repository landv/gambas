Static Public Sub RemoveShortcut(sText As String) As String

  Dim iPos As Integer

  iPos = InStr(sText, "&")
  If iPos Then sText = Left(sText, iPos - 1) & Mid$(sText, iPos + 1)
  If sText Ends "..." Then
    sText = Left(sText, -3)
  Else If sText Ends "…" Then
    sText = String.Left(sText, -1)
  Endif
  Return sText

End

