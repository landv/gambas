Public Sub Move(X As Integer, Y As Integer)

  Dim hUndo As CUndo = GetUndo()

  'IF Kind = "GridView" THEN
  '  PRINT "Pos ="; Control.X; Control.Y
  '  PRINT "Move("; X; ","; Y; ")"
  'ENDIF

  If X And If Y And If X = GetProperty("#X") And If Y = GetProperty("#Y") Then Return

  If Parent Then
    Control.Move($hFamily.ConvertCoord(X, False), $hFamily.ConvertCoord(Y, False))
    'Arrange(Parent.Control, FALSE)
  Endif

  $bDoNotMoveHandle = True

  hUndo.Begin
  SetProperty("#X", X)
  SetProperty("#Y", Y)
  hUndo.End

  $bDoNotMoveHandle = False
  
  MoveAllHandle
  
  UpdateArrangement()
  
End

