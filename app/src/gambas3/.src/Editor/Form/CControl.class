Public Sub Resize(W As Integer, H As Integer)

  Dim hUndo As CUndo = GetUndo()

  If Virtual Then Return

  W = Max(W, 1)
  H = Max(H, 1)

  If W = GetProperty("#Width") And If H = GetProperty("#Height") Then Return

  Control.Resize($hFamily.ConvertCoord(W, False), $hFamily.ConvertCoord(H, False))

  $bDoNotMoveHandle = True

  hUndo.Begin
  SetProperty("#Width", W)
  SetProperty("#Height", H)
  hUndo.End

  $bDoNotMoveHandle = False

  UpdateArrangement()
  MoveAllHandle

End

