  Dim hProp As CPropertyInfo
  
  With Project.Documentation.Classes[Kind]
    Try hProp = .Properties[sProp]
    If IsNull(hProp) Then Return ' La propriété n'existe pas, donc on PEUT changer sa valeur !!
  End With
  
