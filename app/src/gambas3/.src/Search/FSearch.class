Public Sub WakeUp(bReplace As Boolean)
  
  Dim sFind As String

  $bReplace = bReplace
  Me.Show

  Update()
  
  If Not $hCurrent Is FForm Then 
    Try sFind = $hCurrent.GetSelection()
  Endif

  If $bReplace And If sFind Then
    cmbReplace.SelectAll
    cmbReplace.SetFocus
  Else
    cmbSearch.SelectAll
    cmbSearch.SetFocus
  Endif
  
  If sFind Then
    cmbSearch.Text = sFind
    cmbSearch.SelectAll
  Endif
  
  ShowString
  
End

