      Case 0
        .Text = $aBrowse[Row].File
        .Alignment = Align.Normal
      Case 1
        .Text = $aBrowse[Row].GetProcedure()
        .Alignment = Align.Normal
      Case 2
        .Text = CStr($aBrowse[Row].Line + 1) & " "
        .Alignment = Align.Right
      Case 3
        .Text = CStr($aBrowse[Row].Column + 1) & " "
        .Alignment = Align.Right
      Case 4
        .RichText = $aBrowse[Row].Text
        .Alignment = Align.Normal
    End Select

