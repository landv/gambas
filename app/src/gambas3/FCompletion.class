PRIVATE SUB FillWithSpecial()

  DIM sName AS String
  DIM hPict AS Picture = Picture["img/16/point.png"]
  
  lvwComp.Clear
  
  FOR EACH sName IN ["_call", "_compare", "_exit", "_get", "_init", "_new", "_next", "_put", "_unknown"]
    TRY lvwComp.Add(sName, sName, hPict)
  NEXT
  
END


