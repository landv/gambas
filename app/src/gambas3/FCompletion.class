  hEditor = GetEditor()

  sOrg = sWord
  sWord = UCase(sWord)
  
  FOR EACH sCar IN ["TRUE", "FALSE", "NULL", "LAST", "ME", "SUPER"]
    IF sCar LIKE (sWord & "*") THEN 
      cKey[sCar] = TRUE
      aResult.Add(sCar & " 0")
    ENDIF
  NEXT

  FOR EACH sCar IN System.Keywords
    IF sCar LIKE (sWord & "*") THEN 
      IF cKey.Exist(sCar) THEN CONTINUE
