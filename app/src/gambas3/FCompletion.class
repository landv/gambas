      NEXT
      sCar = String.Mid$(sLine, iPos, iPos2 - iPos)
      IF IsDigit(Left$(sCar)) THEN CONTINUE 
      IF cKey.Exist(sCar) THEN CONTINUE
      aResult.Add(sCar & " 3")
      cKey[sCar] = TRUE
    LOOP
  
  LOOP 


