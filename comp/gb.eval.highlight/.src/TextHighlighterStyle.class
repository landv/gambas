Static Public Sub _call((Color) As Integer, Optional (Bold) As Boolean, (Underline) As Boolean) As TextHighlighterStyle

  Dim hStyle As New TextHighlighterStyle
  
  hStyle.Color = Color
  hStyle.Bold = Bold
  hStyle.Underline = Underline
  
  Return hStyle
  
