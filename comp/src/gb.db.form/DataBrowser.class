INHERITS UserControl

'PROPERTY Border AS Integer "<Border>"
PROPERTY Columns AS String[]
PROPERTY Control AS Boolean
PROPERTY READ TableView AS TableView
PROPERTY Header AS Boolean
PROPERTY Orientation AS Integer "<Align,Bottom,Left,Right,Top>"

PUBLIC CONST _Properties AS String = "*,Control=True,Columns,Header=True,Orientation=Bottom"

PRIVATE $hForm AS FBrowser

PUBLIC SUB _new()
  
  $hForm = NEW FBrowser(ME)
  
END

PUBLIC SUB Refresh()
  
  $hForm.Update
  
END


