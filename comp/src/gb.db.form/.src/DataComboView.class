Public Sub TableView_MouseMove()

  Try $hView.View.Rows[$hView.View.RowAt(Mouse.Y)].Selected = True

End

Public Sub TableView_MouseUp()

  If $hView.Current Then
    SetValue($hView.Current[0])
  Else
    SetValue(Null )
  Endif
  
  $hPopup.Close

End

