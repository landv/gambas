Public Sub Main2()

  Dim sLine As String
  Dim fTime As Float
  Dim aScan As String[]
  Dim I As Integer
  
  For I = 1 To 10
  
    fTime = Timer
    
    For Each sLine In Split(File.Load("~/gambas/3.0/contrib/Sebastian Kulesz/gbcrash/carta.html"), "\n")
  
      'Inc iLine
      'Debug iLine;; Len(sLine)
  
      Highlight.Text = sLine
      Highlight.State = Highlight.Normal
    
      HighlightHTML.Run(STYLE_HTML)
      
    Next
    
    Print Timer - fTime
  
    For Each sLine In Split(File.Load("/proc/self/maps"), "\n")
      If InStr(sLine, "[heap]") Then
        aScan = Scan(sLine, "*-* *")
        Print "Heap size is " & Format(Val("&H" & aScan[1] & "&") - Val("&H" & aScan[0] & "&"), "#,##0") & " bytes."
        Break
      Endif
    Next
    
  Next
  
End

