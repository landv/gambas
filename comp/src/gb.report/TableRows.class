' Gambas class file

PRIVATE $iCount AS Integer
PUBLIC Height AS String = "20 px"
PUBLIC Width AS String = "2 cm"
PRIVATE $aRows AS NEW Object[]
PROPERTY Count AS Integer


PUBLIC FUNCTION _Get(Index AS Integer) AS TableRow
  
  RETURN $aRows[Index]
  
END


PRIVATE FUNCTION Count_Read() AS Integer

  RETURN $iCount

END

PRIVATE SUB Count_Write(Value AS Integer)
  DIM i AS Integer
  DIM hRow AS TableRow

  $aRows.Clear
  FOR i = 0 TO Value - 1
    hRow = NEW TableRow
    hRow.Text = (i)
    $aRows.add(hRow)
  NEXT
  $iCount = $aRows.Count
END
