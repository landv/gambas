' Gambas class file

Public Sub TextBox1_Activate()

  Try TerminalView1.Exec(Split(TextBox1.Text, " ", Chr$(34)))
  If Error Then
    Debug Error.Text
  Else
    TerminalView1.SetFocus
  Endif
  
End

Public Sub Timer1_Timer()

  TerminalView1.Insert(CStr(Int(Timer * 10)))
  TerminalView1.NewLine

End

Public Sub Button1_Click()

  TerminalView1.Attr.Bold = Last.Value

End

Public Sub Form_Open()

  TerminalView1.Font.Size = 13.95
  TerminalView1.Exec(["bash"])

End

Public Sub Button2_Click()

  TerminalView1.Attr.Underscore = Last.Value

End

Public Sub Button3_Click()

  TerminalView1.Attr.Reverse = Last.Value

End

Public Sub Button5_Click()

  TerminalView1.Attr.Foreground = Rand(0, 7)

End

Public Sub Form_Close()

  TerminalView1.Kill

End

Public Sub TerminalView1_Kill()

  Me.Close

End

Public Sub TerminalView1_Title(Title As String)

  If Title Then Title &= " - "
  Me.Title = Title & "Gambas Terminal Emulator"

End

