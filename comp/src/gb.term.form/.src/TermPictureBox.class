Private Function ConvTermColor(iTermColor As Integer) As Integer

  Dim i As Integer
  Dim fMax As Float = 1
  Dim fCur As Float
  Dim iCur As Integer

  For i = 0 To $aTermColor.Max
    fcur = Color.Distance($aTermColor[i], iTermColor)
    If fcur < fMax Then
      fMax = fcur
      iCur = i
    Endif
  Next
  Return iCur

End

