  Me.Show
  
End

Static Public Sub WillBeDeleted(hCtrl As Control) As Boolean
  
  Return $aDeleteLater.Exist(hCtrl)
  
End

Public Sub timDeleteLater_Timer()
  
  Dim hCtrl As Control
  For Each hCtrl In $aDeleteLater
    hCtrl.Delete
  Next
  $aDeleteLater.Clear
  
End

