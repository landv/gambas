Public Sub DragEnd(bAnim As Boolean)
  
  Dim hCtrl As Control
  
  If $sDropAction Then
  
    If $sDropAction = "|" Then
      AddSeparator(panWhere)
    Else If $sDropAction = "~" Then
      AddExpander(panWhere)
    Else If $sDropAction = "-" Then
      AddSpace(panWhere)
    Else
      hCtrl = FindControl($sDropAction)
      If hCtrl Then 
        ShowControl(hCtrl)
        hCtrl.Show
        hCtrl.Next = panWhere.Next
      Endif
    Endif
    Update
    
  Endif

  HideWhere(bAnim)
  'Debug
  panWhere.Reparent(Me)
  
End

