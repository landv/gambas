Private Sub AddSeparator(Optional hNext As Control)
  
  Dim hSep As Separator
  Dim hObs As Observer
  Dim W, H As Integer

  Lock()
  
  If $bVertical Then
    W = GetToolBarHeight()
    H = SEPARATOR_SIZE
  Else
    W = SEPARATOR_SIZE
    H = GetToolBarHeight()
  Endif

  hSep = New Separator(panToolBar)
  hSep.Next = hNext
  
  hSep.Resize(W, H)
  hSep.Drop = True
  hObs = New Observer(hSep) As "Item"
  
  Unlock()
  
End

Private Sub AddSpace(Optional hNext As Control)
  
