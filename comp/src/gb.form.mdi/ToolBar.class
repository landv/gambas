PROPERTY Hidden AS Boolean
PROPERTY Action AS String
PROPERTY Orientation AS Integer

PRIVATE $hForm AS FToolBar

PUBLIC SUB _new()
  
  $hForm = NEW FToolBar(ME)
  ME._Container = $hForm.GetContainer()
  ME.AutoResize = TRUE
  
END

