Public Sub dwgTime_MouseMove()

  Dim iLast As Integer = $iCurrentTime
  
  CalcCurrentTime

  If $iCurrentTime < 0 Then
    dwgTime.Mouse = Mouse.Default
  Else
    dwgTime.Mouse = Mouse.Pointing
  Endif
  
  If $iCurrentTime <> iLast Then 
    dwgTime.Refresh
  Endif

End

