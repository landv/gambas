Public Sub dwgMonth_MouseWheel()

  Dim dDate As Date
  
  If Mouse.Forward Then
    dDate = DateAdd($dDate, gb.Day, -1)
  Else
    dDate = DateAdd($dDate, gb.Day, 1)
  Endif
  
  SetDate(Year(dDate), Month(dDate), Day(dDate))

End
