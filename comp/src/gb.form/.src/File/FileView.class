Private Sub ShowDetailed_Write(bDetailed As Boolean)
  
  Dim hOld As Control
  
  If bDetailed = ShowDetailed_Read() Then Return
  
  If bDetailed Then
    
    hOld = $hIconView
    $hColumnView.Show
    
  Else
    
    hOld = $hColumnView
    $hIconView.Show
    
  Endif
  
  hOld.Hide
  Me.Proxy = GetView()
  Me.Background = hOld.Background
  Me.Foreground = hOld.Foreground
  $bRefreshAll = True
  RefreshView
  TakeSelection
  
End

