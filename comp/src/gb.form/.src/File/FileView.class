Private Sub GetSelection() As String[]
  
  Dim hView As Object
  Dim aSel As New String[]
  
  If $hIconView.Visible Then
    hView = $hIconView
  Else
    hView = $hColumnView
  Endif
  
  hView.MoveFirst
  While hView.Available
    If hView.Item.Selected Then
      aSel.Add(hView.Item.Key)
    Endif
    hView.MoveNext
  Wend
  
  Return aSel
  
End

