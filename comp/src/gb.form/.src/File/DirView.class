Public Sub TreeView_Select()

  If Not $bNoExpand And If Not $bInRename Then
    If $hTreeView.Current And If Not $hTreeView.Current.Expanded Then $hTimerExpand.Trigger
  Endif
  If $bNoEvent Then Return 
  Raise {Select}
  Raise Click

End

