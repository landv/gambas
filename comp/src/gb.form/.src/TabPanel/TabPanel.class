Public Sub TabBarContainer_KeyPress()
  
  If $aCont.Count = 0 Then Return
  
  Select Case Key.Code
    
    Case Key.Left, Key.PageUp
      If System.RightToLeft Then
        Try Inc Me.Index
      Else
        Try Dec Me.Index
      Endif
      Stop Event
      
    Case Key.Right, Key.PageDown
      If System.RightToLeft Then
        Try Dec Me.Index
      Else
        Try Inc Me.Index
      Endif
      Stop Event
      
    Case Key.Home
      Me.Index = 0
      Stop Event
      
    Case Key.End
      Me.Index = $aCont.Max
      Stop Event
    
  End Select
  
End

