Public Sub _MoveTab(hSrc As _TabPanelButton, hDst As _TabPanelButton, bAfter As Boolean)
  
  Dim S, T As Integer
  Dim hSrcPanel As Control
  
  If hSrc = hDst Then Return

  Object.Lock(Me)
  
  S = _GetIndex(hSrc)
  $aButton.Remove(S)
  hSrcPanel = $aCont[S]
  $aCont.Remove(S)
  
  T = _GetIndex(hDst)
  If bAfter Then Inc T
  $aButton.Add(hSrc, T)
  $aCont.Add(hSrcPanel, T)
  
  UpdateLayout
  
  Object.Unlock(Me)
  
  Raise Move(S, T)
  
  Index_Write(T)
  
End

