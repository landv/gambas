Public Sub Editor_KeyPress()
  
  If Key.Code = Key.Escape Then 
    Cancel
    Stop Event
  Else If Key.Code = Key.Return Or If Key.Code = Key.Enter Then
    Try $cItem[$sKeyRenaming].Text = $hRenameBox.Text
    If Not Error Then Cancel(True)
    Stop Event
  Endif
  
End

