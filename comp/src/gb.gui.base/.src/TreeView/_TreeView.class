Private Sub UpdateRenameBox() As Boolean

  Dim hItem As _TreeView_Item
  Dim X As Integer
  Dim W As Integer
  
  If Not $hRenameBox Then Return
  
  hItem = $cItem[$sKeyRenaming]
  
  X = hItem.X - $hView.ScrollX
  If hItem.Picture Then X += hItem.Picture.W + 2
  W = Min($hView.ClientW, $hView.Columns[0].Width) - X
  If W < 32 Then 
    Cancel
    Return
  Endif
  
  $hRenameBox.Move(X, hItem.Y, W, hItem.H)

End

Public Sub _Rename(hItem As _TreeView_Item)
  
  Dim X As Integer
  Dim SX As Integer
  
  _EnsureVisible(hItem)
  Wait
  Key_Write(hItem.Key)
  
  Do
    X = hItem.X '(hItem._Depth + 1) * 16
    SX = Max(0, X - $hView.ClientW - 32)
    If SX = $hView.ScrollX Then Break
    $hView.ScrollX = SX
  Loop
  
  $hRenameBox = New RenameBox(Me, $hView.Padding) As "Editor"
  $hRenameBox.Text = hItem.Text
  $hRenameBox.SetFocus
  
  $sKeyRenaming = hItem.Key
  
  UpdateRenameBox
  
End

Private Sub Cancel(Optional bOK As Boolean)
  
  Dim sCursor As String 
  
  If Not $hRenameBox Then Return
  $hRenameBox.Delete
  $hRenameBox = Null
  $hView.SetFocus

  sCursor = $sCursor
  $sCursor = $sKeyRenaming
  If bOK Then
    Raise Rename
  Else
    Raise Cancel
  Endif
  $sCursor = sCursor
  
  $sKeyRenaming = ""
  
End


