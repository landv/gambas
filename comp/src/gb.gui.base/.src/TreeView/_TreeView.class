Public Sub _SetItemSelected(hItem As _TreeView_Item, bSelected As Boolean)
  
  Dim iRow As Integer
  
  If $hView.Mode = Select.Single Then SetItemVisible(hItem)
  
  iRow = _ItemToRow(hItem)
  $hView.Rows[iRow].Selected = bSelected
  
