      DrawText($sText, sText, X, hRect.Y, W, hRect.H, Align.Left)
    Endif
  
  Else
  
    Y = hRect.Y
    Y += PH + DS \ 2
    
    If $sText Or If $sRichText Then

      sText = $sRichText
