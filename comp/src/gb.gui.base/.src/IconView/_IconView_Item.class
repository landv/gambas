      H = hIconView.Font.RichTextHeight(sText, hRect.W)
      HT = hRect.H - (Y - hRect.Y)

      If H > HT Then 
        sText = Paint.TrimRichText(sText, hRect.W, HT)
        $bEllipsized = True
      Else
        $bEllipsized = False
      Endif
      
    Endif
    
    hRect1 = Rect(hRect.X - DS \ 2, hRect.Y - DS \ 2, hRect.W + DS, hRect.H + DS)
