Public Sub _MoveItem(hItem As _IconView_Item, iNewPos As Integer)
  
  Dim iPos As Integer
  
  If iNewPos < 0 Then Return
  
  iPos = _FindItem(hItem)
  If iNewPos = iPos Then Return
  
  $aItems.Remove(iPos)
  If iPos < iNewPos Then Dec iNewPos
  $aItems.Add(hItem, iNewPos)
  $hView.View.Refresh
  
End

