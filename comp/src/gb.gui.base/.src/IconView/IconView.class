Private Sub GetIconGeometry(iPos As Integer, hRect As Rect)
  
  Dim iCol, iRow As Integer
  
  iRow = GetRow(iPos)
  iCol = GetColumn(iPos)
  
  If $bHorizontal Then
    hRect.X = iRow * $iGridWidth + $iPad
    hRect.Y = iCol * $iGridHeight + $iPad
    hRect.W = $iGridWidth
    hRect.H = $iGridHeight
  Else
    hRect.X = iCol * $iGridWidth + $iPad
    hRect.Y = iRow * $iGridHeight + $iPad
    hRect.W = $iGridWidth
    hRect.H = $iGridHeight
  Endif
  
End

