Private Sub RaiseEvent(iEvent As Integer, iItem As Integer)
  
  Dim iSave As Integer = $iIntern
  
  $iIntern = iItem
  Select Case iEvent
    Case EVENT_ACTIVATE
      Raise Activate
    Case EVENT_CLICK
      Raise Click
    Case EVENT_RENAME
      Raise Rename
  End Select
  $iIntern = iSave
  
End


