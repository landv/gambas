  gvwinfo[2, 0].Text = "Type"
  gvwinfo[2, 1].Text = "Normal"
  gvwinfo[3, 0].Text = "Compiler"
  gvwinfo[3, 1].Text = "Gambas 3.3.90"
  gvwinfo[4, 0].Text = "(IsOld)"
