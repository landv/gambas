    $hTimerScroll = New Timer As "TimerScroll"
    $hTimerScroll.Delay = 50
    $hTimerScroll.Start
  Endif
  
  $DX = Drag.X
  $DY = Drag.Y
  
End

Public Sub DrawingArea_DragLeave()
  
