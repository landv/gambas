  If Border_Read() = Value Then Return
  
  If Value Then
    hSave = Me._Container
    Me._Container = Null
    $hBorder = New DrawingArea(Me) As "Border"
    Me._Container = hSave
  Else
    $hBorder.Delete
    $hBorder = Null
