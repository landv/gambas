    $hTimerScroll.Stop
    $hTimerScroll = Null
  Endif
  
End

Public Sub _EnsureVisibleScroll(X As Integer, Y As Integer)
  
  If EnsureVisible(Me.ScrollX + X - 16, Me.ScrollY + Y - 16, 32, 32) Then Return
  Drag.Hide
  
End


Public Sub TimerScroll_Timer()
  
