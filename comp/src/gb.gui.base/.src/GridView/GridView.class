Public Sub _GetCellHeight(iRow As Integer, iCol As Integer) As Integer
  
  Dim H, I As Integer

  If Not HasSpan(iRow, iCol) Then Return $hRows._GetRowHeight(iRow)

  For I = iRow To iRow + Max(0, _GetSpan(iRow, iCol)[0])
    H += $hRows._GetRowHeight(I)
  Next
  
  Return H
  
End

