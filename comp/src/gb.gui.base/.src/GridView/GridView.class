Public Sub _GetCellWidth(iRow As Integer, iCol As Integer) As Integer
  
  Dim W, I As Integer

  If Not HasSpan(iRow, iCol) Then Return $hColumns[iCol].Width

  For I = iCol To iCol + Max(0, _GetSpan(iRow, iCol)[1])
    W += $hColumns[I].Width
  Next
  
  Return W
  
