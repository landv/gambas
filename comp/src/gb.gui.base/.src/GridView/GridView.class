Public Sub _ResizeContents()
  
  Dim F As Integer = _GetFrameWidth()
  
  ' Debug $hRows._GetHeight(); " / "; $hRows.Count;;
  ' If $hRows.Count Then Error $hRows[0].H * $hRows.Count;
  ' Error
  
