  If YOffset Then hBoxShadow.YOffset = YOffset
  If iColor Then hBoxShadow.Color = iColor
  If SPread Then hBoxShadow.Spread = Spread
  If Blur Then hBoxShadow.Blur = Blur
  hBoxShadow.Inset = Inset
  $aBoxShadow.Add(hBoxShadow)
  
End

