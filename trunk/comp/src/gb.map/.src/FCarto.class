  Dim i As Integer
  Dim c As Integer
  s = File.Load("./pointsparcelle")
  hshape.Color = Color.Green
  For Each t In Split(s, "\n")
    If t = "" Then 
      hmappoints.Add(hpoints)
      hshape.AddPolygon(i, hmappoints)

