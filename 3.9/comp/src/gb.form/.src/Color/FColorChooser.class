Private Sub ChangeSliderValue(hSlider As Slider, hSpinBox As SpinBox)
  
  Dim iVal As Integer

  iVal = hSlider.Value
  If $bNormal Then
    If hSlider.Value < 255 Then
      iVal = (hSlider.Value \ hSlider.PageStep) * hSlider.PageStep
    Endif
    $bNormal = False
  Endif

  hSpinBox.Value = iVal
  If hSlider.Value <> iVal Then hSlider.Value = iVal

End



