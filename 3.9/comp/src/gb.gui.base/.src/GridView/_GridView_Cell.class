Private Function RowSpan_Read() As Integer

  Dim S As Integer = _View._GetSpan(_Row, _Column)[0]
  If S >= 0 Then Return S + 1
  Return S

End

Private Sub RowSpan_Write(Value As Integer)

  Dim S As Integer = _View._GetSpan(_Row, _Column)[1]

  If S < 0 Then Return
  If Value < 1 Or If Value > 32767 Then Return
  
  _View._SetSpan(_Row, _Column, Value - 1, S)
  _View.Refresh

End

Private Function ColumnSpan_Read() As Integer

  Dim S As Integer = _View._GetSpan(_Row, _Column)[1]
