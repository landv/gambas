Private Sub ColumnSpan_Write(Value As Integer)

  Dim S As Integer = _View._GetSpan(_Row, _Column)[0]

  If S < 0 Then Return
  If Value < 1 Or If Value > 32767 Then Return
  
  _View._SetSpan(_Row, _Column, S, Value - 1)
  _View.Refresh

End

